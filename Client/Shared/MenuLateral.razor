@inject IJSRuntime JS
<nav class="navbar navbar-dark bg-dark fixed-top" style="background: rgb(34,195,158);
background: linear-gradient(225deg, rgba(34,195,158,1) 0%, rgba(87,102,130,1) 100%)">
    <div class="container-fluid">
        <div>
            <a class="navbar-brand" href="#">PeMMaS</a>
            <a class="navbar-brand" href="graficas"><i class="bi bi-graph-up"></i></a>
            <a class="navbar-brand" href="configuracion"><i class="bi bi-gear"></i></a>
            <a class="navbar-brand" href="formularios"><i class="bi bi-list-nested"></i></a>
            <a class="navbar-brand" @onclick=Ayuada data-bs-toggle="modal" data-bs-target="#LOGIN"><i class="bi bi-question-circle"></i></a>
        </div>
        <div>
            <a href="">@NombreUsuario <i class="bi bi-person-circle"></i></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        
        
        <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Dark offcanvas</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">                 
                    <li class="nav-item" data-bs-dismiss="offcanvas">
                        <a class="nav-link" href="medestatica">Medición Estática</a>
                    </li>
                    <li class="nav-item" data-bs-dismiss="offcanvas">
                        <a class="nav-link" href="pruebas">Pruebas Pozo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="formularios">Formularios</a>
                    </li>
                </ul>
                @if (NombreUsuario == null)
                {
                    <div class="d-flex mt-3" @onclick=AbrirLog data-bs-toggle="modal" data-bs-target="#LOGIN">
                        <button class="btn btn-success">LogIn</button>
                    </div>
                }
                else
                {
                    <div class="d-flex mt-3">
                        <button class="btn btn-success" @onclick=CerrarSesion>LogOut</button>
                    </div>
                }

                
            </div>
        </div>
    </div>
</nav>

<!-- Modal -->
<div class="modal fade" id="LOGIN" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            @if (verLog)
            {
                <section id="contact" class="contact" style="background: rgb(34,195,158);
background: linear-gradient(225deg, rgba(34,195,158,1) 0%, rgba(87,102,130,1) 100%);border-radius:5px">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12" data-aos="fade-up" data-aos-delay="100">

                                <form class="php-email-form mt-4">
                                    <div class="form-group mt-3">
                                        <b style="color:beige">Nombre Operario</b>
                                        <input type="text" @bind-value=NombreUsuario class="form-control" name="subject" placeholder="Nombre" required>
                                    </div>
                                    <div class="form-group mt-3">
                                        <b style="color:beige">Contraseña</b>
                                        <input type="password" class="form-control" name="subject" placeholder="Ingresar clave" required>
                                    </div>
                                    <div class="my-3">
                                        <div class="sent-message"><b style="color:beige">Auditoria de seguimiento</b> </div>
                                    </div>
                                </form>
                                <div class="text-center"><button class="btn btn-primary" @onclick=GuardarSesion data-bs-dismiss="modal">Guardar Sesion</button></div>
                                <br />
                            </div>
                        </div>

                    </div>
                </section>
                <!-- End Contact Section -->
            }   
            @if (verListaAyuda)
            {

                <Callout Type="CalloutType.Tip"  Heading="PeMMaS">
                    <ul class="list-group" style="display:flex;justify-content:center">
                        <li class="list-group-item active" aria-current="true" style="background: rgb(34,195,158);
background: linear-gradient(225deg, rgba(34,195,158,1) 0%, rgba(87,102,130,1) 100%)">Instructivos y Ayudas</li>
                        <li style="display:flex;justify-content:center" class="list-group-item">
                            <button type="button" class="btn btn-outline-success" @onclick=VerVideo>Configuracion Inicial</button>
                        </li>
                        <li style="display:flex;justify-content:center" class="list-group-item">
                            <button type="button" class="btn btn-outline-success" @onclick=VerVideo>Movimientos en tanques</button>
                        </li>
                        <li style="display:flex;justify-content:center" class="list-group-item">
                            <button type="button" class="btn btn-outline-success" @onclick=VerVideo>Configuración para despachos</button>
                        </li>
                        <li style="display:flex;justify-content:center" class="list-group-item">
                            <button type="button" class="btn btn-outline-success" @onclick=VerVideo>Pruebas de pozo</button>
                        </li>
                    </ul>
                </Callout>
            }
            @if (verTutorial)
            {
                <iframe width="560" height="315" src="https://www.youtube.com/embed/FHj_kcnPkBg?si=4VvQYPcMTrpfrMRE" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>

            }
        </div>
    </div>
</div>
@code {
    private string? NombreUsuario = null;
    bool verTutorial = false;
    bool verListaAyuda = false;
    bool verLog = true;
    private async Task GuardarSesion()
    {

        await JS.InvokeVoidAsync("localStorage.setItem", "Usuario", NombreUsuario);
        await ObtenerUser();
    }

    private async Task ObtenerUser()
    {
        var localStorag = await JS.InvokeAsync<string>("localStorage.getItem", "Usuario");
        NombreUsuario = localStorag;
    }
    private async Task CerrarSesion()
    {
        await JS.InvokeVoidAsync("localStorage.removeItem", "Usuario", NombreUsuario);
        NombreUsuario = null;
    }

    void Ayuada()
    {
        verTutorial = false;
        verListaAyuda = true;
        verLog = false;
    }

    void AbrirLog()
    {
        verTutorial = false;
        verListaAyuda = false;
        verLog = true;
    }

    void VerVideo(){
        verTutorial = true;
        verListaAyuda = false;
        verLog = false;
    }
}
